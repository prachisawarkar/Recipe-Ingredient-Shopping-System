
@{
    ViewBag.Title = "Index";
}
<style>
    .indexcontainer {
        margin-top: 70px;
    }

    .carttitle {
        margin-bottom: 40px;
    }

    .carth4 {
        font-weight: 700;
        font-size: x-large;
    }

    .cartp {
        font-size: x-large;
    }

    .quantitylabel {
        font-size: x-large;
        margin-right: 77px;
    }
    .cartbutton{
        font-size:x-large;
        font-weight:700;
        color:white;
    }

    .cartbutton:hover {
        color: white;
    }
    .cartwell {
        box-shadow: 0px 3px 7px -2px grey;
        background: linear-gradient(-45deg, #004E82, #5B869A);
    }

    .addtocartbtn {
        margin: 5px 0px 0px 136px;
    }
    .navbar {
        background-color: #004e89;
        color: white;
    }

    .navbar-nav > li > a {
        color: white;
        font-size: 22px;
        font-weight: bold;
    }

    .navbardiv {
        height: 57px;
    }

    .navbar-nav > li:hover {
        color: black;
    }

    .navbar-brand {
        color: white;
        font-weight: bold;
        font-size: 28px;
    }
</style>

<div class="navbar navbar-fixed-top navbardiv">
    <div class="container">
        <div class="col-lg-5">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("Recipe Ingredient Shopping", "Index", "HomeMvc", new { area = "" }, new { @class = "navbar-brand navheading" })*@
                <a class="navbar-brand" href="#" style="font-family: 'Lucida Handwriting'; font-size:x-large; font-weight: 900;">Recipe Ingredient Shopping</a>
            </div>
        </div>
        <div class="col-lg-7">
            <div class="navbar-collapse collapse pull-right">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "HomeMvc")</li>
                    <li>@Html.ActionLink("Admin", "Index", "Admin")</li>
                    <li>@Html.ActionLink("Recipes", "ListOfRecipes", "CustomerMVC")</li>
                    <li>@Html.ActionLink("Logout", "Logout", "Login")</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<br />
<br />
<br />

<div class="indexcontainer">
    <div class="col-lg-5 col-lg-offset-1">
        <div class="well text-center cartwell">
            <p>
                <a href="@Url.Action("ListRecipes","Admin")" class="cartbutton">Manage Recipes</a>
            </p>
        </div>
    </div>

    <div class="col-lg-5">
        <div class="well text-center cartwell">
            <p>
                <a href="@Url.Action("ListIngredients","Admin")" class="cartbutton">Manage Ingredients</a>
            </p>
        </div>
    </div>

    <div class="col-lg-5 col-lg-offset-1">
        <div class="well text-center cartwell">
            <p>
                <a href="@Url.Action("ListShipping","Admin")" class="cartbutton">Manage Shipping Details</a>
            </p>
        </div>
    </div>

    <div class="col-lg-5 ">
        <div class="well text-center cartwell">
            <p>
                <a href="@Url.Action("ListOrders","Admin")" class="cartbutton">Manage Order Details</a>
            </p>
        </div>
    </div>

    
</div>