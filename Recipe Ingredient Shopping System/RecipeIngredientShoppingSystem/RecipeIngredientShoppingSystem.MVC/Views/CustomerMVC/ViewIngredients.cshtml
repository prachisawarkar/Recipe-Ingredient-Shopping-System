@model IEnumerable<RecipeIngredientShoppingSystem.DataEntity.Ingredient>

@{
    ViewBag.Title = "ViewIngredients";
}

@*Styling*@
<style>
    .customersidecontainer {
        margin-top: 68px;
    }
    .ingredientcard {
        box-shadow: 0 6px 12px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        height: 560px;
        border: 1px solid rgba(191,219,247,0.2);
        border-radius: 5px;
        margin-bottom: 20px;
    }
    .ingredientcard:hover {
        box-shadow: 0 20px 40px 0 rgba(0,0,0,0.2);
    }
    .ingname {
        font-weight: bold;
        text-transform: capitalize;
        margin: 55px 0px 0px 41px;
    }

    .ingnamediv {
        height: 150px;
        background: linear-gradient(-45deg, #004E82, #5B869A);
        margin-bottom: 40px;
    }
    #addtocart {
        font-size: 23px;
    }
    .ingedienttitle {
        font-weight: bold;
        color: #004e89;
    }

    .addtocartgbtn {
        margin: 30px 0px 30px 30px;
    }

    #addtocartgbtn, #button {
        border: 2px solid rgb(0, 78, 137);
        outline: none;
        border-radius: 0;
        padding: 14px 16px;
        font-weight: 500;
        font-size: 21px;
        color: rgb(0, 78, 137);
        -webkit-appearance: none;
    }

    .addtocartgbtn > div > a:hover {
        background-color: rgba(0, 78, 137, 0.2);
    }
    .fa {
        margin-right:8px;
    }
    .navbar {
        background-color: #004e89;
        color: white;
    }

    .navbar-nav > li > a {
        color: white;
        font-size: 22px;
        font-weight: bold;
    }

    .navbardiv {
        height: 57px;
    }

    .navbar-nav > li:hover {
        color: black;
    }

    .navbar-brand {
        color: white;
        font-weight: bold;
        font-size: 28px;
    }
</style>

<div class="navbar navbar-fixed-top navbardiv">
    <div class="container">
        <div class="col-lg-5">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("Recipe Ingredient Shopping", "Index", "HomeMvc", new { area = "" }, new { @class = "navbar-brand navheading" })*@
                <a class="navbar-brand" href="#" style="font-family: 'Lucida Handwriting'; font-size:x-large; font-weight: 900;">Recipe Ingredient Shopping</a>
            </div>
        </div>
        <div class="col-lg-7">
            <div class="navbar-collapse collapse pull-right">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "HomeMvc")</li>
                    <li>@Html.ActionLink("Admin", "Index", "Admin")</li>
                    <li>@Html.ActionLink("Recipes", "ListOfRecipes", "CustomerMVC")</li>
                    <li>@Html.ActionLink("Logout", "Logout", "Login")</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="container customersidecontainer">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="card ingredientcard col-lg-5 col-lg-offset-1 text-center">
                <div class="row border ingnamediv">
                    <div class="col-lg-10">
                        <h2 class="ingname">@Html.DisplayFor(modelItem => item.Name)</h2>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-4 text-left ingedienttitle">
                        <h4>
                            @Html.DisplayNameFor(model => model.RecipeId)
                        </h4>
                    </div>
                    <div class="col-lg-6 col-lg-offset-1 text-left">
                        <h4>
                            @Html.DisplayFor(modelItem => item.RecipeId)
                        </h4>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-4 text-left ingedienttitle">
                        <h4>
                            @Html.DisplayNameFor(model => model.ManufacturerName)
                        </h4>
                    </div>
                    <div class="col-lg-6 col-lg-offset-1 text-left">
                        <h4>
                            @Html.DisplayFor(modelItem => item.ManufacturerName)
                        </h4>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-4 text-left ingedienttitle">
                        <h4>
                            @Html.DisplayNameFor(model => model.ManufacturerDate)
                        </h4>
                    </div>
                    <div class="col-lg-6 col-lg-offset-1 text-left">
                        <h4>
                            @Html.DisplayFor(modelItem => item.ManufacturerDate)
                        </h4>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-4 text-left ingedienttitle">
                        <h4>
                            @Html.DisplayNameFor(model => model.Price)
                        </h4>
                    </div>
                    <div class="col-lg-6 col-lg-offset-1 text-left">
                        <h4>
                            @Html.DisplayFor(modelItem => item.Price)
                        </h4>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-4 text-left ingedienttitle">
                        <h4>
                            @Html.DisplayNameFor(model => model.ExpiryDate)
                        </h4>
                    </div>
                    <div class="col-lg-6 col-lg-offset-1 text-left">
                        <h4>
                            @Html.DisplayFor(modelItem => item.ExpiryDate)
                        </h4>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-4 text-left ingedienttitle">
                        <h4>
                            @Html.DisplayNameFor(model => model.Description)
                        </h4>
                    </div>
                    <div class="col-lg-6 col-lg-offset-1 text-left ">
                        <h4>
                            @Html.DisplayFor(modelItem => item.Description)
                        </h4>
                    </div>
                </div>

                <div class="row addtocartgbtn">
                    <div class="col-lg-10">
                        <a href="@Url.Action("AddToCart", "CustomerMVC", new { ingredientId = item.IngredientId, UserId =ViewBag.UserId, price = item.Price })"
                           class="btn btn-lg btn-default" id="addtocart"><i class="fa fa-shopping-cart"></i>Add To Cart</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
