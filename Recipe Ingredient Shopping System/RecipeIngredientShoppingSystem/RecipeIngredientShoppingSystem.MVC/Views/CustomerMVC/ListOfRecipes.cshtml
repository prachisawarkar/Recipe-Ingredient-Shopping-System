@model IEnumerable<RecipeIngredientShoppingSystem.DataEntity.Recipe>

@{
    ViewBag.Title = "ListOfRecipes";
}

@*styling*@
<style>
    .customersidecontainer {
        margin-top: 68px;
    }
    .recipecard {
        @*box-shadow: 0 0px 2px 0 rgba(0,0,0,0.2);*@
        box-shadow: 0 6px 12px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        height: 426px;
        border: 1px solid rgba(191,219,247,0.2);
        border-radius: 5px;
        margin-bottom: 20px;
    }
    .recipecard:hover {
        box-shadow: 0 20px 40px 0 rgba(0,0,0,0.2);
    }
    .recipename {
        font-weight: bold;
        text-transform: capitalize;
        margin: 55px 0px 0px 41px;
    }
    .recipenamediv {
        height: 150px;
        background: linear-gradient(-45deg, #004E82, #5B869A);
        margin-bottom: 40px;
    }
    .viewingbtn {
        margin: 30px 0px 30px 30px;
    }
    @*#viewingbutton, #button {
        border: 2px solid rgb(0, 78, 137);
        outline: none;
        border-radius: 0;
        padding: 14px 16px;
        font-weight: 500;
        font-size: 21px;
        color: rgb(0, 78, 137);
        -webkit-appearance: none;
    }*@
    .viewingbtn > div > a:hover {
        background-color: rgba(0, 78, 137, 0.2);
    }
    .recipedescdiv {
        height: 134px;
        text-align: justify;
        margin: 0px 0px 0px 26px;
    }
    .fa {
        margin-right: 13px;
    }
    .navbar {
        background-color: #004e89;
        color: white;
    }

    .navbar-nav > li > a {
        color: white;
        font-size: 22px;
        font-weight: bold;
    }

    .navbardiv {
        height: 57px;
    }

    .navbar-nav > li:hover {
        color: black;
    }

    .navbar-brand {
        color: white;
        font-weight: bold;
        font-size: 28px;
    }

</style>

<div class="navbar navbar-fixed-top navbardiv">
    <div class="container">
        <div class="col-lg-5">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("Recipe Ingredient Shopping", "Index", "HomeMvc", new { area = "" }, new { @class = "navbar-brand navheading" })*@
                <a class="navbar-brand" href="#" style="font-family: 'Lucida Handwriting'; font-size:x-large; font-weight: 900;">Recipe Ingredient Shopping</a>
            </div>
        </div>
        <div class="col-lg-7">
            <div class="navbar-collapse collapse pull-right">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "HomeMvc")</li>
                    <li>@Html.ActionLink("Admin", "Index", "Admin")</li>
                    <li>@Html.ActionLink("Recipes", "ListOfRecipes", "CustomerMVC")</li>
                    <li>@Html.ActionLink("Logout", "Logout", "Login")</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="container customersidecontainer">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="card recipecard col-lg-3 col-lg-offset-1 text-center">
                <div class="row border recipenamediv">
                    <div class="col-lg-10">
                        <h2 class="recipename">@Html.DisplayFor(modelItem => item.Name)</h2>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-10 recipedescdiv">
                        <h4>
                            @Html.DisplayFor(modelItem => item.Description)
                        </h4>
                    </div>
                </div>
                <div class="row viewingbtn">
                    <div class="col-lg-10">
                        <a href="@Url.Action("ViewIngredients", "CustomerMVC", new { id = item.RecipeId })"
                           class="btn btn-lg btn-default" id="viewingbutton"> Ingredients</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
