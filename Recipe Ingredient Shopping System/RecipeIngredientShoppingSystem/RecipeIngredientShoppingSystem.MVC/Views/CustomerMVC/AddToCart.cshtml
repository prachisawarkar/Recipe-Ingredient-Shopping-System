@model RecipeIngredientShoppingSystem.MVC.Models.AddToCartUserModel

@{
    ViewBag.Title = "AddToCart";
}

<style>
    .cartcontainer {
        margin-top : 70px;
    }
    .carttitle {
        margin-bottom: 40px;
    }

    .carth4 {
        font-weight: 700;
        font-size: x-large;
    }

    .cartp {
        font-size: x-large;
    }

    .quantitylabel {
        font-size: x-large;
        margin-right: 77px;
    }
    .cartbutton:hover {
        background-color: rgba(0, 78, 137, 0.2);
    }
    .cartwell {
        box-shadow: 0px 3px 7px -2px grey;
        background: linear-gradient(-45deg, #004E82, #5B869A);
    }
    .addtocartbtn {
        margin: 5px 0px 0px 136px;
    }
    .navbar {
        background-color: #004e89;
        color: white;
    }

    .navbar-nav > li > a {
        color: white;
        font-size: 22px;
        font-weight: bold;
    }

    .navbardiv {
        height: 57px;
    }

    .navbar-nav > li:hover {
        color: black;
    }

    .navbar-brand {
        color: white;
        font-weight: bold;
        font-size: 28px;
    }
</style>

<div class="navbar navbar-fixed-top navbardiv">
    <div class="container">
        <div class="col-lg-5">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("Recipe Ingredient Shopping", "Index", "HomeMvc", new { area = "" }, new { @class = "navbar-brand navheading" })*@
                <a class="navbar-brand" href="#" style="font-family: 'Lucida Handwriting'; font-size:x-large; font-weight: 900;">Recipe Ingredient Shopping</a>
            </div>
        </div>
        <div class="col-lg-7">
            <div class="navbar-collapse collapse pull-right">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "HomeMvc")</li>
                    <li>@Html.ActionLink("Admin", "Index", "Admin")</li>
                    <li>@Html.ActionLink("Recipes", "ListOfRecipes", "CustomerMVC")</li>
                    <li>@Html.ActionLink("Logout", "Logout", "Login")</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="form-body center-block container cartcontainer">
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(model => model.IngredientId)

        <div class="row">
            <div class="col-lg-4">
                <div class="well text-center cartwell">
                    <h4 class="carth4">Ingredient Id</h4>
                    <p class="cartp">@Request.QueryString["ingredientId"]</p>
                    <hr />

                    <h4 class="carth4">Per Price of Ingredient</h4>
                    <p class="cartp">@Request.QueryString["price"]</p>
                    <br />
                </div>
            </div>

            <div class="col-lg-7 col-lg-offset-1 ">
                <div class="row">
                    <h1 class="carttitle">Add To Cart</h1>
                </div>
                <div class="form-group row formdiv">
                    <div class="col-md-3 quantitylabel">
                        @Html.LabelFor(model => model.IngredientQuantity, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-md-7">
                        @Html.EditorFor(model => model.IngredientQuantity, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.IngredientQuantity)
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-offset-2 col-lg-3">
                        <div class="form-group addtocartbtn">
                            <input type="submit" value="SUBMIT" class="btn btn-lg btn-default cartbutton text" />
                        </div>
                    </div>
                </div>
            </div>
                @*<div class="form-group">
                    @Html.LabelFor(model => model.IngredientQuantity)
                    @Html.EditorFor(model => model.IngredientQuantity)
                    @Html.ValidationMessageFor(model => model.IngredientQuantity)
                </div>*@
        </div>

        @*<div class="form-group row">
                @Html.LabelFor(model => model.IngredientQuantity)
                @Html.EditorFor(model => model.IngredientQuantity)
                @Html.ValidationMessageFor(model => model.IngredientQuantity)
            </div>*@

        @*<div class="form-group">
                <input type="submit" value="submit" class="btn button" />
            </div>*@
    }
</div>

@section Scripts {

    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/cssjqryUi")

    <script type="text/javascript">
       
         $(function () {
            var errorMessage = '@TempData["ErrorMessage"]'
            if (errorMessage != '')
                alertify.error(errorMessage);
         });
    </script>
    }
